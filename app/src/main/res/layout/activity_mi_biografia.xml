<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="comceleluengo.fb.petagram.MiBiografia">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|enterAlways">
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nombre"
        android:id="@+id/nombre"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_nombre"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_display_2_material" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/foto"
        android:layout_width="@dimen/fotbiografia"
        android:layout_height="@dimen/fotbiografia"
        android:src="@drawable/cdl"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        app:civ_border="false"
        app:civ_shadow_radius="10"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mibio"
        android:id="@+id/descripcion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/top_desc"
        android:paddingRight="@dimen/padding_desc"
        android:paddingLeft="@dimen/padding_desc"
        />
</LinearLayout>
