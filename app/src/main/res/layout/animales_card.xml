<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ancho_card"
    card_view:cardCornerRadius="@dimen/action_bar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgImagen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ayudantedesanta"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imglikes"
            android:layout_below="@+id/imgImagen"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/dog_bone_48"/>

        <TextView
            android:id="@+id/tvNumHuesitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_below="@id/imgImagen"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:gravity="center"
            android:layout_toLeftOf="@id/imglikes"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgraiting"
            android:layout_below="@+id/imgImagen"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dog_bone_50"
            android:background="?attr/selectableItemBackground"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>