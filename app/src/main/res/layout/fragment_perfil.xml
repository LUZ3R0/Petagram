<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.PerfilFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/imagenCircular"
        android:layout_width="@dimen/imgcircular"
        android:layout_height="@dimen/imgcircular"
        android:src="@drawable/jerry"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mgtop_imagen"
        app:civ_border_color="#EEEEEE"
        app:civ_border_width="@dimen/action_bar"
        app:civ_shadow="true"
        app:civ_border="false"
        app:civ_shadow_radius="0"
        app:civ_shadow_color="#8BC34A"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jerry"
        android:id="@+id/tvPerfil"
        android:layout_below="@+id/imgCircular"
        android:layout_gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reciclador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>
